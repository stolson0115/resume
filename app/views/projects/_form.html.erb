<%= form_for (@project) do |f| %>
  <% if @project.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@project.errors.count, "error") %> prohibted this project from being saved:</h2>
    <ul>
    <% @project.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
  	<%= f.label :category %><br>
  	<%= f.text_field :category %>
  </p>
  
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <label>My Avatar</label>
  <%= f.file_field :avatar %>
  <%= f.hidden_field :avatar_cache %>
  <p>
    <%= f.submit %>
  </p>
<% end %>