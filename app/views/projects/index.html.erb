<h1>
  <button type="button" class="btn btn-danger"><%= link_to 'New Project', new_project_path %></button>
</h1>

<table class="table table-condensed">
  <thead>
  <tr>
    <th>Index</th>
    <th>Title</th>
    <th>Category</th>
    <th>Description</th>
    <th colspan="4"></th>
  </tr>
</thead>
  <% @projects.each_with_index do |project, index| %>
  <tbody>
    <tr>
      <td><%= index+1 %></td>
      <td><%= project.title %></td>
      <td><%= project.category %></td>
      <td><%= project.text %></td>
      <td><%= link_to 'Show', project_path(project)%></td>
      <td><%= link_to 'Edit', edit_project_path(project) %></td>
      <td><%= link_to 'Destroy', project_path(project), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  </tbody>
  <% end %>
</table>

