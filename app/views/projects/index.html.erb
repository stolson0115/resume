<p><a href="projects/new" class="btn btn-primary" role="button">New Project</a> </p>
<h1>Work in progress</h1>
<table class="table table-condensed table-hover table-responsive">
  <thead>
  <tr>
    <th>Index</th>
    <th>Title</th>
    <th>Category</th>
    <th colspan="3"></th>
  </tr>
</thead>
  <% @projects.each_with_index do |project, index| %>
  <tbody>
  <% if index%2 ==0 %>
    <tr class="info">
      <td><%= index+1 %></td>
      <td><%= link_to project.title, project_path(project)%></td>
      <td><%= project.category %></td>
      <td><%= link_to 'Show', project_path(project)%></td>
      <td><%= link_to 'Edit', edit_project_path(project) %></td>
      <td><%= link_to 'Destroy', project_path(project), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
    <% else %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= link_to project.title, project_path(project)%></td>
      <td><%= project.category %></td>
      <td><%= link_to 'Show', project_path(project)%></td>
      <td><%= link_to 'Edit', edit_project_path(project) %></td>
      <td><%= link_to 'Destroy', project_path(project), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
    <%end%>
  </tbody>
  <% end %>
</table>

